<!DOCTYPE HTML>
<html lang="{{ .Site.Language }}">

	{{ partial "header.html" . }}

	<body>

		<!-- Header -->
			<div id="header">

				<div class="top">

					<!-- Logo -->
						<div id="logo">
							<span class="image avatar48"><img src="{{ .Site.Params.avatar }}" alt="{{ .Site.Params.name }}" /></span>
							<h1 id="title">{{ .Site.Params.name }}</h1>
							<p>{{ .Site.Params.description }}</p>
						</div>

					<!-- Nav -->
						<nav id="nav">
							<!--

								Prologue's nav expects links in one of two formats:

								1. Hash link (scrolls to a different section within the page)

								   <li><a href="#foobar" id="foobar-link" class="icon fa-whatever-icon-you-want skel-layers-ignoreHref"><span class="label">Foobar</span></a></li>

								2. Standard link (sends the user to another page/site)

								   <li><a href="http://foobar.tld" id="foobar-link" class="icon fa-whatever-icon-you-want"><span class="label">Foobar</span></a></li>

							-->
							<ul>
								<li><a href="#top" id="top-link" class="skel-layers-ignoreHref"><span class="icon fa-home">Intro</span></a></li>
								<li><a href="#portfolio" id="portfolio-link" class="skel-layers-ignoreHref"><span class="icon fa-th">Speaking / Slides</span></a></li>
								<li><a href="#about" id="about-link" class="skel-layers-ignoreHref"><span class="icon fa-user">About Me</span></a></li>
								<li><a href="#skill" id="skill-link" class="skel-layers-ignoreHref"><span class="icon fa-server">Skill / Contribute</span></a></li>
								<li><a href="#hobby" id="hobby-link" class="skel-layers-ignoreHref"><span class="icon fa-heart">Hobby</span></a></li>
								<li><a href="#contact" id="contact-link" class="skel-layers-ignoreHref"><span class="icon fa-envelope">Contact</span></a></li>
							</ul>
						</nav>

				</div>

				<div class="bottom">

					<!-- Social Icons -->
						<ul class="icons">
              {{ range .Site.Params.social }}
              <li><a href="{{ .link }}" class="icon fa-{{ .icon }}"><span class="label">{{ .medium }}</span></a></li>
              {{ end }}
						</ul>

				</div>

			</div>

		<!-- Main -->
			<div id="main">

				<!-- Intro -->
					<section id="top" class="one dark cover">
						<div class="container">

							<header>
								<h2 class="alt">{{ .Site.Params.banner_html | safeHTML }}</h2>
								<p>{{ .Site.Params.banner_html_desc | safeHTML }}</p>
							</header>

							<footer>
								<a href="#about" class="button scrolly">{{ .Site.Params.banner_button }}</a>
							</footer>

						</div>
					</section>

				<!-- Portfolio -->
					<section id="portfolio" class="two">
						<div class="container">

							<header>
								<h2>Speaking / Slides</h2>
							</header>

							<p>{{ .Site.Params.portfolio | safeHTML }}</p>


              <div class="row">
                <div class="4u 12u$(mobile)">
                  {{ range .Site.Params.portfolio1 }} 
                  <article class="item">
                    <a href="{{ .url }}" class="image fit thumb"><img src="{{ .source }}" alt="{{ .alt }}" /></a>
                    <header>
                      <h3>{{ .title }}</h3>
                    </header>
                  </article>
                  {{ end }}
                </div>

                <div class="4u 12u$(mobile)">
                  {{ range .Site.Params.portfolio2 }} 
                  <article class="item">
                    <a href="{{ .url }}" class="image fit thumb"><img src="{{ .source }}" alt="{{ .alt }}" /></a>
                    <header>
                      <h3>{{ .title }}</h3>
                    </header>
                  </article>
                  {{ end }}
                </div>

                <div class="4u 12u$(mobile)">
                  {{ range .Site.Params.portfolio3 }} 
                  <article class="item">
                    <a href="{{ .url }}" class="image fit thumb"><img src="{{ .source }}" alt="{{ .alt }}" /></a>
                    <header>
                      <h3>{{ .title }}</h3>
                    </header>
                  </article>
                  {{ end }}
                </div>
              </div>


						</div>
					</section>

				<!-- About Me -->
					<section id="about" class="three">
						<div class="container">

							<header>
								<h2>About Me</h2>
							</header>

							<a href="#about" class="image featured"><img src="{{ .Site.Params.about_image }}" alt="" /></a>

							<div>
							<div class="aboutme">
							{{ .Site.Params.about_description | safeHTML }}
							</div>
							</div>

						</div>
					</section>

				<!-- Skill -->
					<section id="skill" class="three">
						<div class="container">

							<header>
								<h2>Skill</h2>
							</header>

							<p>{{ .Site.Params.skill_description }}</p>

							<div class="skillwrapper">
              							{{ range .Site.Params.skills }}
								<div class="skillbar" data-percent="{{ .percent }}">
									<span class="skillbar-title" style="background: {{ .title_color }};">{{ .title }}</span>
									<p class="skillbar-bar" style="background: #{{ .bar_color }};"></p>
									<!-- <span class="skill-bar-percent"></span> -->
									<span style="vertical-align: top">{{ .comment }}</span>
								</div>
              							{{ end }}
							</div>

						</div>
					</section>

				<!-- Hobby -->
					<section id="hobby" class="three">
						<div class="container">

							<header>
								<h2>Hobby</h2>
							</header>

							<p>{{ .Site.Params.hobby_description }}</p>

						</div>
					</section>

				<!-- Contact -->
					<section id="contact" class="four">
						<div class="container">

							<header>
								<h2>Contact</h2>
							</header>
							<p>{{ .Site.Params.contact | safeHTML }}</p>
						</div>
					</section>

			</div>

		<!-- Footer -->
			<div id="footer">

				<!-- Copyright -->
					<ul class="copyright">
						<li>&copy; {{ .Site.Params.copyright }}</li><li>Design: <a href="http://html5up.net">HTML5 UP</a></li><li>Powered by <a href="https://gohugo.io/">Hugo</a></li>
					</ul>

			</div>

		<!-- Scripts -->
			<script src="js/jquery.scrolly.min.js"></script>
			<script src="js/jquery.scrollzer.min.js"></script>
			<script src="js/skel.min.js"></script>
			<script src="js/util.js"></script>
			<!--[if lte IE 8]><script src="/js/ie/respond.min.js"></script><![endif]-->
			<script src="js/main.js"></script>
			<script src="js/skill.js"></script>

	</body>
</html>
